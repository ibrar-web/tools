<script>
// Tabs
const tabCase = document.getElementById('tabCase');
const tabWord = document.getElementById('tabWord');
const tabClean = document.getElementById('tabClean');
const textCaseTool = document.getElementById('textCaseTool');
const wordCounterTool = document.getElementById('wordCounterTool');
const textCleanerTool = document.getElementById('textCleanerTool');

tabCase.addEventListener('click', () => {
  tabCase.classList.add('active');
  tabWord.classList.remove('active');
  tabClean.classList.remove('active');
  textCaseTool.style.display = 'block';
  wordCounterTool.style.display = 'none';
  textCleanerTool.style.display = 'none';
});
tabWord.addEventListener('click', () => {
  tabWord.classList.add('active');
  tabCase.classList.remove('active');
  tabClean.classList.remove('active');
  wordCounterTool.style.display = 'block';
  textCaseTool.style.display = 'none';
  textCleanerTool.style.display = 'none';
});
tabClean.addEventListener('click', () => {
  tabClean.classList.add('active');
  tabCase.classList.remove('active');
  tabWord.classList.remove('active');
  textCleanerTool.style.display = 'block';
  textCaseTool.style.display = 'none';
  wordCounterTool.style.display = 'none';
});

// Text Case Converter
function convertText(type) {
  let text = document.getElementById('inputTextCase').value;
  if(!text) return;
  let result = '';
  switch(type){
    case 'upper': result = text.toUpperCase(); break;
    case 'lower': result = text.toLowerCase(); break;
    case 'title': result = text.replace(/\w\S*/g, t => t.charAt(0).toUpperCase() + t.substr(1).toLowerCase()); break;
    case 'sentence': result = text.toLowerCase().replace(/(^\s*\w|[.!?]\s*\w)/g, c => c.toUpperCase()); break;
    case 'toggle': result = text.split('').map(c => c===c.toUpperCase()?c.toLowerCase():c.toUpperCase()).join(''); break;
  }
  document.getElementById('outputCase').innerText = result;
}

// Word Counter
function countWords() {
  let text = document.getElementById('inputWord').value;
  let wordCount = text.trim() === '' ? 0 : text.trim().split(/\s+/).length;
  let charCount = text.length;
  let lineCount = text.split(/\n/).length;
  document.getElementById('outputWord').innerText = `Words: ${wordCount}\nCharacters: ${charCount}\nLines: ${lineCount}`;
}

// Text Cleaner
function cleanText() {
  let text = document.getElementById('inputClean').value;
  let cleaned = text.replace(/\r\n|\n|\r/g, ' ').replace(/\s+/g, ' ').trim();
  document.getElementById('outputClean').innerText = cleaned;
}

// Modal
const modal = document.getElementById('adModal');
const continueBtn = document.getElementById('continueBtn');
const toolContainer = document.getElementById('toolContainer');

window.onload = function() {
  modal.style.display = 'flex';
  toolContainer.classList.add('disabled');
}

continueBtn.addEventListener('click', function() {
  modal.style.display = 'none';
  toolContainer.classList.remove('disabled');
});

modal.addEventListener('click', function(e){
  if(e.target === modal) e.stopPropagation();
});
</script>
