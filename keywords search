<!-- ‚öôÔ∏è Functional JS -->
<script>
  
  document.querySelectorAll('.trend-list span').forEach(btn=>{
  btn.addEventListener('click', ()=>{
    document.getElementById('keyword').value = btn.textContent.replace('#','');
    document.getElementById('searchBtn').click();
  });
});
async function getSuggestions(platform, query) {
  try {
    const url = `https://api.datamuse.com/words?ml=${encodeURIComponent(query)}&max=25`;
    const res = await fetch(url);
    const data = await res.json();
    const suggestions = data.map(item => item.word);
    return suggestions;
  } catch (err) {
    console.error("Error fetching:", err);
    return [];
  }
}



document.getElementById("searchBtn").addEventListener("click", async ()=>{
  const platform = document.getElementById("platform").value;
  const keyword = document.getElementById("keyword").value.trim();
  const loading = document.getElementById("loading");
  const resultsGrid = document.getElementById("results");
  const header = document.getElementById("resultsHeader");
  const noResults = document.getElementById("noResults");

  if (!keyword) return alert("Please enter a keyword");

  resultsGrid.innerHTML = "";
  header.style.display = "none";
  noResults.style.display = "none";
  loading.style.display = "block";

  const suggestions = await getSuggestions(platform, keyword);

  loading.style.display = "none";

  if (!suggestions.length) {
    noResults.style.display = "block";
    return;
  }

  header.style.display = "flex";
  suggestions.forEach(s => {
    const div = document.createElement("div");
    div.className = "result-item";
    div.textContent = s;
    resultsGrid.appendChild(div);
  });

  // Copy and Export
  document.getElementById("copyBtn").onclick = () => {
    const text = suggestions.join("\n");
    navigator.clipboard.writeText(text);
    alert("‚úÖ All keywords copied!");
  };

  document.getElementById("exportBtn").onclick = () => {
    const csv = "data:text/csv;charset=utf-8," + suggestions.map(k => `"${k}"`).join("\n");
    const a = document.createElement("a");
    a.href = encodeURI(csv);
    a.download = `${keyword}_keywords.csv`;
    a.click();
  };
});
</script>
