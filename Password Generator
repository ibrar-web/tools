<script>
// Tabs
const tabPassword = document.getElementById('tabPassword');
const tabCase = document.getElementById('tabCase');
const tabWord = document.getElementById('tabWord');
const tabClean = document.getElementById('tabClean');
const passwordTool = document.getElementById('passwordTool');
const textCaseTool = document.getElementById('textCaseTool');
const wordCounterTool = document.getElementById('wordCounterTool');
const textCleanerTool = document.getElementById('textCleanerTool');

tabPassword.addEventListener('click', ()=>{ setActiveTab(tabPassword); showTool(passwordTool); });
tabCase.addEventListener('click', ()=>{ setActiveTab(tabCase); showTool(textCaseTool); });
tabWord.addEventListener('click', ()=>{ setActiveTab(tabWord); showTool(wordCounterTool); });
tabClean.addEventListener('click', ()=>{ setActiveTab(tabClean); showTool(textCleanerTool); });

function setActiveTab(tab){
  [tabPassword, tabCase, tabWord, tabClean].forEach(t=>t.classList.remove('active'));
  tab.classList.add('active');
}
function showTool(tool){
  [passwordTool, textCaseTool, wordCounterTool, textCleanerTool].forEach(t=>t.style.display='none');
  tool.style.display='block';
}

// Password Generator
function generatePassword(){
  let length=parseInt(document.getElementById('passwordLength').value);
  if(isNaN(length)||length<4) length=4;
  if(length>32) length=32;
  const chars='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()_+-=';
  let password='';
  for(let i=0;i<length;i++) password+=chars.charAt(Math.floor(Math.random()*chars.length));
  document.getElementById('outputPassword').innerText=password;
}

// Text Case Converter
function convertText(type){
  let text=document.getElementById('inputTextCase').value;
  if(!text) return;
  let result='';
  switch(type){
    case 'upper': result=text.toUpperCase(); break;
    case 'lower': result=text.toLowerCase(); break;
    case 'title': result=text.replace(/\w\S*/g,t=>t.charAt(0).toUpperCase()+t.substr(1).toLowerCase()); break;
    case 'sentence': result=text.toLowerCase().replace(/(^\s*\w|[.!?]\s*\w)/g,c=>c.toUpperCase()); break;
    case 'toggle': result=text.split('').map(c=>c===c.toUpperCase()?c.toLowerCase():c.toUpperCase()).join(''); break;
  }
  document.getElementById('outputCase').innerText=result;
}

// Word Counter
function countWords(){
  let text=document.getElementById('inputWord').value;
  let wordCount=text.trim()===''?0:text.trim().split(/\s+/).length;
  let charCount=text.length;
  let lineCount=text.split(/\n/).length;
  document.getElementById('outputWord').innerText=`Words: ${wordCount}\nCharacters: ${charCount}\nLines: ${lineCount}`;
}

// Text Cleaner
function cleanText(){
  let text=document.getElementById('inputClean').value;
  let cleaned=text.replace(/\r\n|\n|\r/g,' ').replace(/\s+/g,' ').trim();
  document.getElementById('outputClean').innerText=cleaned;
}

// Modal
const modal=document.getElementById('adModal');
const continueBtn=document.getElementById('continueBtn');
const toolContainer=document.getElementById('toolContainer');

window.onload=function(){ modal.style.display='flex'; toolContainer.classList.add('disabled'); }
continueBtn.addEventListener('click',()=>{ modal.style.display='none'; toolContainer.classList.remove('disabled'); });
modal.addEventListener('click',e=>{ if(e.target===modal) e.stopPropagation(); });
</script>
